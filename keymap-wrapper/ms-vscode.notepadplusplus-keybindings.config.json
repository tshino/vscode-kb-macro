{
    "base": {
        "type": "url",
        "url": "https://github.com/Microsoft/vscode-notepadplusplus-keybindings/raw/main/package.json"
    },
    "footer": [
        {
            "key": "ctrl+shift+r",
            "command": "kb-macro.startRecording",
            "when": "!kb-macro.recording"
        },
        {
            "key": "ctrl+shift+p",
            "command": "kb-macro.cancelRecording",
            "when": "kb-macro.recording"
        },
        {
            "key": "ctrl+shift+r",
            "command": "kb-macro.finishRecording",
            "when": "kb-macro.recording"
        },
        {
            "key": "ctrl+shift+p",
            "command": "kb-macro.playback",
            "when": "!kb-macro.recording"
        }
    ]
}
